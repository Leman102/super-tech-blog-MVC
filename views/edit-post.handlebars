<article>
    <a href="/dashboard"> ↞ Back to dashboard</a>
    <h2 class="edit-post-title">
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <label for="post-title">Title:</label>
            <input name="post-title" type="text" value="{{post.title}}" />
            <label for="post-content">Content:</label>
            <input name="post-content" type="text" value="{{post.post_content}}" />
        </div>
        <div>
            Created by you on {{format_date post.created_at}}
        </div>
        <button type="submit">Save Post </button>
        <button type="button" class="delete-post-btn">Delete Post</button>
    </form>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">Add Comment 📝</button>
    </div>
</form>

<!--add partial for comments-->
{{> comments post.comments}}

{{#if loggedIn}}
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
{{/if}}