<ol class="post-list">
    {{#each posts as |post|}}  
    <li>
        <article class="post">
            <div class="title">
                <div class="title-post">
                    <h1>{{title}}</h1>
                    <span>Post by {{user.username}} on {{created_at}}<span>
                </div>
            </div>
            <div class="meta">
                {{post_content}}
                <br>
                <a href="/post/{{id}}" class="comment-counter">Comment(s) {{comments.length}}</a>
            </div>
        </article>
    </li>
    {{/each}}
  
</ol>